<UserControl x:Class="QLabel.Windows.Main_Canvas.Annotation_Elements.Line"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLabel.Windows.Main_Canvas.Annotation_Elements"
             mc:Ignorable="d"
		   >
	<!-- 一个简单的圆圈 -->
	<Line 
		Name="line"
		X1="50" X2="100"
		Y1="50" Y2="100"
		Fill="#FFB5DCFF" 
		Stroke="BlueViolet" 
		StrokeThickness="2"
		>
		<Line.Triggers>
			<EventTrigger RoutedEvent="MouseEnter">
				<EventTrigger.Actions>
					<BeginStoryboard>
						<Storyboard>
							<!-- 改变颜色 -->
							<ColorAnimation Storyboard.TargetProperty="(Rectangle.Stroke).(SolidColorBrush.Color)"
									From="BlueViolet" To="Crimson" Duration="0:0:0.25"
									BeginTime="0:0:0"/>
							<ColorAnimation Storyboard.TargetProperty="(Rectangle.Stroke).(SolidColorBrush.Color)"
									From="Crimson" 
									To="BlueViolet" 
									BeginTime="0:0:0.25"
									Duration="0:0:0.25"/>
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger.Actions>
			</EventTrigger>
		</Line.Triggers>
	</Line>
</UserControl>
