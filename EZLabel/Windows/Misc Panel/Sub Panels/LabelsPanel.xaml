<UserControl x:Class="QLabel.Windows.Misc_Panel.Sub_Panels.LabelsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLabel.Windows.Misc_Panel.Sub_Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
	<StackPanel>
		<TextBlock FontSize="9.5">Labels</TextBlock>

		<!-- 这里将显示所有的 label 信息 -->
		<ListBox Name="listbox" MinHeight="100" MaxHeight="300">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Columns="2" />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
		
		<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
			<StackPanel.Resources>
				<Style TargetType="{x:Type Button}">
					<Setter Property="Margin" Value="1"/>
					<Setter Property="Padding" Value="2"/>
					<Setter Property="FontSize" Value="9"/>
				</Style>
			</StackPanel.Resources>
			<Button>Add</Button>
			<Button>Remove</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
