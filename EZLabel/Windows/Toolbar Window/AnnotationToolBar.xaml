<UserControl x:Class="EZLabel.Windows.Toolbar_Window.AnnotationToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EZLabel.Windows.Toolbar_Window"
             mc:Ignorable="d">
	<StackPanel 
		Background="WhiteSmoke" 
		Orientation="Horizontal"
		DockPanel.Dock="Left" 
		Width="260">
		<Button Name="SquareTool_Button" Height="26" Width="26" BorderBrush="Transparent">
			<Image Source="/Resources/Icons/square.png"/>
		</Button>
		<Button
			Name="RectangleTool_Button" Height="26" Width="26"
			BorderBrush="Transparent"
			Click="RectangleTool_Button_Click">
			<Image Source="/Resources/Icons/rectangle.png"/>
		</Button>
		<Button Name="Rhombus_Button" Height="26" Width="26" BorderBrush="Transparent">
			<Image Source="/Resources/Icons/rhombus.png"/>
		</Button>
		<Button Name="PolygonTool_Button" Height="26" Width="26" BorderBrush="Transparent">
			<Image Source="/Resources/Icons/polygon.png"/>
		</Button>
		<Button Name="Circle_Button" Height="26" Width="26" BorderBrush="Transparent">
			<Image Source="/Resources/Icons/circle.png"/>
		</Button>
		<Button Name="Selection_Button" Height="26" Width="26" BorderBrush="Transparent">
			<Image Source="/Resources/Icons/selection.png"/>
		</Button>

		<Button Name="Crop_Button" Height="26" BorderBrush="Transparent" Width="34">
			Crop
		</Button>
	</StackPanel>
</UserControl>
