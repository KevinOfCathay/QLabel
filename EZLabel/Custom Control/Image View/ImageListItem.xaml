<UserControl x:Class="QLabel.Custom_Control.Image_View.ImageListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLabel.Custom_Control.Image_View"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="130">
	<StackPanel HorizontalAlignment="Center" Name="ViewImageContainer">
		<Border 
			Name="thumbnail_image_border" 
			Height="100" Width="100"
			BorderThickness="2" 
			BorderBrush="LightGray">
			<Button 
				BorderThickness="0" 
				Background="Transparent" 
				Click="ImageButtonClick">
				<Image  Name="thumbnail_image" Height="100" Width="100"></Image>
			</Button>
		</Border>
		<TextBlock 
				Name="image_name" 
				Width="100" 
				Height="25"
				FontSize="10.5"
				TextWrapping="Wrap">Image Name</TextBlock>
	</StackPanel>
</UserControl>
