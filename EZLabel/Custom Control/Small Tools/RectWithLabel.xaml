<UserControl x:Class="QLabel.Custom_Control.Small_Tools.RectWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLabel.Custom_Control.Small_Tools"
             mc:Ignorable="d" >
	<ListBoxItem>
		<StackPanel Orientation="Horizontal">
			<Border Name="rect" Width="10" Height="10" Background="{StaticResource B100SCB}"/>
			<Label Name="label" FontSize="{StaticResource TextSmall}">text</Label>
		</StackPanel>
	</ListBoxItem>
</UserControl>
