<UserControl x:Class="QLabel.Custom_Control.Small_Tools.DirectorySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLabel.Custom_Control.Small_Tools"
             mc:Ignorable="d" 
		   d:DesignWidth="600">
	<DockPanel>
		<!-- 选择存储路径 -->
		<Button 
			DockPanel.Dock="Right" Width="18" Height="18"
			Click="SelectDirectoryClick">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="5"/>
				</Style>
			</Button.Resources>
			<Image Source="/Resources/Icons/folder.png" Width="12" Height="12"/>
		</Button>
		<Border DockPanel.Dock="Right" Margin="4,0"
					    BorderBrush="#FF5C4B4B" BorderThickness="1" >
			<Border.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="3"/>
				</Style>
			</Border.Resources>
			<TextBlock 
						Padding="8,0"
						VerticalAlignment="Center"
						Name="path"
						DockPanel.Dock="Top" FontSize="9" Foreground="#FF797979"></TextBlock>
		</Border>
	</DockPanel>
</UserControl>
