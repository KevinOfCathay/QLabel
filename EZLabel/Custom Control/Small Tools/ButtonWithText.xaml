<UserControl 
	Name="buttonwithtext"
	x:Class="QLabel.Custom_Control.Small_Tools.ButtonWithText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLabel.Custom_Control.Small_Tools"
             mc:Ignorable="d">
	<StackPanel 
	    Orientation="Vertical"
	    HorizontalAlignment="Center">
		<Button 
			Name="button"
			Height="30" 
			Width="30" 
			BorderBrush="Transparent">
			<Image
				Height="26"
				Width="26"
				Source="{Binding ImgSource, ElementName=buttonwithtext}"/>
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="4"/>
				</Style>
			</Button.Resources>
		</Button>
		<TextBlock 
			HorizontalAlignment="Center"
			Margin="0" Padding="0" Name="text" FontSize="8" 
				 Text="{Binding Text, ElementName=buttonwithtext}"/>
	</StackPanel>
</UserControl>
