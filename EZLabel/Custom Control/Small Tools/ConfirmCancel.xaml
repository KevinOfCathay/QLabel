<UserControl 
	x:Class="QLabel.Custom_Control.Small_Tools.ConfirmCancel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLabel.Custom_Control.Small_Tools">
	<StackPanel 
			Orientation="Horizontal" 
			HorizontalAlignment="Right">
		<Button Style="{StaticResource NiceButton}" 
			   Background="CornflowerBlue" 
			   Click="Confirm_Click">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="5"/>
				</Style>
			</Button.Resources>
			Confirm
		</Button>
		<Button Style="{StaticResource NiceButton}" Background="Gray" Click="Cancel_Click">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="5"/>
				</Style>
			</Button.Resources>
			Cancel
		</Button>
	</StackPanel>
</UserControl>
